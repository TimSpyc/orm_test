{
  "name": "Python 3.11 Dev Container",
  "image": "python:3.11",
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash",
    "python.pythonPath": "/usr/local/bin/python",
    "python.autoComplete.extraPaths": ["/workspace", "/workspace/orm_test"],
    "python.envFile": "/workspace/.env"
  },
  "extensions": [
    "ms-python.python",
    "nickdemayo.vscode-gremlins",
    "streetsidesoftware.code-spell-checker",
    "arturock.notepadpluspluskeybindings"
  ],
  "postCreateCommand": "pip install -r /workspaces/orm_testrequirements.txt && echo 'export DJANGO_SETTINGS_MODULE=orm_test.settings' >> /workspace/.env"
}
